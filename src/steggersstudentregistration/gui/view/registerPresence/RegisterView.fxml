<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="steggersstudentregistration.gui.view.registerPresence.RegisterController">
    <children>
        <Label layoutX="223.0" layoutY="36.0" text="Todays lessons" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <ListView fx:id="lstLessons" layoutX="200.0" layoutY="68.0" prefHeight="200.0" prefWidth="200.0"/>
        <HBox alignment="CENTER" layoutX="200.0" layoutY="268.0" maxWidth="1.7976931348623157E308" prefWidth="200.0"
              spacing="10.0">
            <children>
                <Button fx:id="btnHere" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handlePresence" style="-fx-background-color: GREEN;" text="I'M HERE"
                        textFill="#25f22f" HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnNotHere" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handlePresence" style="-fx-background-color: RED;" text="NOT HERE" textFill="#ffe0df"
                        HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets top="25.0"/>
            </padding>
        </HBox>
    </children>
</AnchorPane>
